{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    
    "strict": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    // "traceResolution": true
  },
  "include": ["./src/**/*","./src/node_modules/**/*"],
  "exclude": ["views", "public", "pm2", "bin", "configs", "dist","logs"]
}
